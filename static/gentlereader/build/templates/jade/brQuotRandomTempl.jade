h2.hl-random-h A Few at Random

for q in locals
  section.hl-sel-block
    h3.hl-subhead
      span.header-from from&nbsp;
      a(href="/selections/#{q.selection.slug}") &ldquo;#{q.selection.title}
        - var title = q.selection.title
        if title.charAt(title.length - 1) != '?&rdquo;'
          | ,&rdquo;
        | &nbsp;by #{q.selection.author}&nbsp;
        span.hl-sel-dates (#{q.selection.pub_year})
    ul
      li.hl-i
        .hl-quotationmark &#8220;
        a.hl-quote.hl-random(href="/highlights/#{q.quotation.id}")!= q.quotation.quotation
    .hl-more
      a(href="/selections/#{q.selection.slug}").hl-more--link read this full selection &raquo;
      br
      a(href="/highlights/##{q.selection.author_slug}").hl-more--link + more highlights from #{q.selection.author}