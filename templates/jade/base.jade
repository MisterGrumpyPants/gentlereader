!!!
html(lang="en")
  head
    meta(http-equiv="Content-Type", content="text/html")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title
      {% block title %}{% endblock %}

    {% block meta %}{% endblock %}

    link(rel="alternate", type="application/rss+xml", title="RSS", href="/feed")

    link(rel="stylesheet", href="{{ STATIC_URL }}anthologist/style/css/STYLE.css")
    {% block styles %}{% endblock %}

    {% block topscripts %}{% endblock %}

    {% block head %}{% endblock %}

  body

    {% block header %}
    include includes/header
    {% endblock %}

    {% block main %}{% endblock %}

    {% block footer %}
    include includes/footer
    {% endblock %}

    // work this into a build layer
    script(type="application/javascript", src="{{ STATIC_URL }}anthologist/scripts/require-config.js")
    {% block bottomscripts %}{% endblock %}