{% extends "base.html" %}

{% block title %}Contact and Contribute to The Gentle Reader{% endblock %}

{% block meta %}
meta(name="description", content="Suggest public domain texts and site improvements for The Gentle Reader.")
{% endblock %}

{% block bottomscripts %}
include includes/only-highlight-script
{% if go_to_captcha %}
script
  document.getElementById("recaptcha-wrapper").scrollIntoView();
{% endif %}
script

{% endblock %}

{% block main %}

.content
  h1.browse-h Contact

  .browse-container.regtxt
    p Please send ideas for selections or tags, questions, suggestions about improving the site, enthusiastic compliments, requests for new functionality, or whatever you feel like sending.
    form(action='/contact/', method='post')#contact-form
      {% csrf_token %}
      {{ form.non_field_errors }}
      .field-wrapper
        label(for='id_subject') Subject
        {{ form.subject }}
        {{ form.subject.errors }}
      .field-wrapper
        label(for='id_message') Message
        {{ form.message }}
        {{ form.message.errors }}
      .field-wrapper
        label(for='id_sender') Your email address
        {{ form.sender }}
        //input#id_sender(type='email', name='sender', maxlength='100', required)
        {{ form.sender.errors }}
      .field-wrapper
        label.cc-label(for='id_cc_myself') CC yourself?
        {{ form.cc_myself }}
        {{ form.cc_myself.errors }}
      .field-wrapper#recaptcha-wrapper
        label(for='id_captcha') Are you human? Honest? Prove it.
        {{ form.captcha }}
        {{ form.captcha.errors }}
      .submit-wrapper
        input#contact-submit(type='submit', value='Submit')

  aside.browse-extras
    .rq-container
      include includes/rand-quot
    .rq-btn Read a Random Highlight





{% endblock %}